@inject SignInManager<AppUser> _signInManager
@inject UserManager<AppUser> _userManager

<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white fixed-top" style="padding: 20px;">
    <div class="container-fluid">
        <a class="navbar-brand bold-text" asp-area="" asp-controller="Home" asp-action="Index">Olubanke Eboda</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Contact" asp-action="Contact">Contact</a>
                </li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <span>
                        @if (_signInManager.IsSignedIn(User))
                        {
                            var loggedinUser = await _userManager.FindByEmailAsync(User.Identity.Name);
                           <span><a asp-action="Logout" asp-controller="Account">Log out</a>: @loggedinUser.FirstName</span>
                        }
                        else
                        {
                            <a class="nav-link text-dark btn btn-primary text-white" asp-area="" asp-controller="account" asp-action="login">Log in</a>
                        }
                    </span>
                </li>
            </ul>
        </div>
    </div>
</nav>
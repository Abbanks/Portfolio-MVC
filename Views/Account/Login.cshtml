@model LoginViewModel

<div class="container mt-5">
 <div class="row">
        <div class="col-md-6" >
            <div class="rounded">
             <img src="~/image/background.jpg" alt="image" />
             <img src="~/image/background.jpg" alt="image" />
            </div>
        </div>
        <div class="col-md-6">
        <div class="container mt-5">
            <div class="row d-flex justify-content-center">
                <div class="shadow-sm p-3 rounded bg-white">
                    <h2>Login</h2>
                    <div asp-validation-summary="All"></div>
                    <form asp-action="login" asp-controller="account" method="post">


                        <div class="form-group">
                            <label asp-for="Email">Email</label>
                            <input asp-for="Email" class="form-control" id="username" placeholder="Enter email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password">Password</label>
                            <input asp-for="Password" class="form-control" id="password" placeholder="Enter password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember Me</label>
                        </div>

                            <p class="text-end"><a asp-action="forgotpassword" asp-controller="account" class="text-dark">Forgot Password?</a></p>

                            <p class="text-center" style="border-radius:20px"><button type="submit" class="btn btn-primary bg-dark text-white border-0">Log in</button></p>

                            <p class="text-center"> Don't have an account? <a asp-action="signup" asp-controller="account" class="text-dark">Sign up</a></p>

                    </form>
                </div>
            </div>
        </div>

        </div>
 </div>
 </div>

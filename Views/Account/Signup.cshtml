@model SignupViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 ">
            <div class="rounded">
                <img src="~/image/background.jpg" alt="image" />
                <img src="~/image/background.jpg" alt="image" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="shadow-sm p-3 rounded bg-white">
                        <h2>Create an account</h2>

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success" role="alert">
                                @TempData["Message"]
                            </div>
                        }

                        <div asp-validation-summary="All"></div>
                        <form asp-action="signup" asp-controller="account" method="post">

                            <div class="form-group">
                                <label asp-for="FirstName">FirstName</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter firstname" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName">LastName</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter lastname" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Password">Password</label>
                                <input asp-for="Password" class="form-control" placeholder="Enter password"/>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter password" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
 
                            <p class="text-center" style="border-radius:20px"><button type="submit" class="btn btn-primary bg-dark text-white border-0">Sign up</button></p>

                            <p class="text-center"> Already have an account? <a asp-action="login" asp-controller="account" class="text-dark">Log in</a></p>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="py-5">

  </div>


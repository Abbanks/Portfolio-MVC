@model ResetPasswordViewModel

<div class="container mt-3">
    <div class="row d-flex justify-content-center">
        <div class="shadow-sm p-3 rounded bg-white">

    <h2>Reset Password</h2>

    @if (TempData["Message"] != null)
    {
        <div>@TempData["Message"]</div>
    }

    <div asp-validation-summary="All"></div>

    
    <p>Enter your email address to reset your password</p> 

    <form asp-action="resetpassword" asp-controller="account" method="post">

        <input asp-for="Token" type="hidden" class="form-control" />
        <input asp-for="UserId" type="hidden" class="form-control" />

        <div class="form-group">
            <label asp-for="NewPassword">New Password</label>
            <input asp-for="NewPassword" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">Confirm Password</label>
             <input asp-for="ConfirmPassword" class="form-control" placeholder="Enter password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <p style="border-radius:20px"><button type="submit" class="btn btn-primary bg-dark text-white border-0">Reset Password</button></p>
    </form>


</div>
